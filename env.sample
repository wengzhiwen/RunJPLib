# ====================================================================
# General Application & Flask Settings
# ====================================================================

# Log level for the application (e.g., DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Port on which the Flask application will run
FLASK_APP_PORT=5000

# Base URL of the website, used for generating absolute URLs (e.g., in sitemaps)
BASE_URL=https://www.runjplib.com

# Secret key for JWT session management
JWT_SECRET_KEY="a_secure_jwt_secret_key"

# Secret key for Flask session management (e.g., CSRF protection)
FLASK_SECRET_KEY="a_secure_flask_secret_key"

# Access code for the admin panel
ACCESS_CODE="your_admin_access_code"

# Comma-separated list of allowed domains for CORS
ALLOWED_DOMAINS=localhost,127.0.0.1

# Comma-separated list of allowed ports for CORS
ALLOWED_PORTS=5000,3000


# ====================================================================
# Database & Vector Store Settings
# ====================================================================

# MongoDB connection URI
MONGODB_URI="mongodb://localhost:27017/RunJPLib"

# Log level for the pymongo driver (e.g., DEBUG, INFO, WARNING)
PYMONGO_LOG_LEVEL=INFO

# Path to the ChromaDB persistent storage directory
CHROMA_DB_PATH="./chroma_db"

# Path to the LlamaIndex cache directory
LLAMA_INDEX_CACHE_DIR="./llama_index_cache"


# ====================================================================
# OpenAI & AI Model Settings
# ====================================================================

# Your OpenAI API key
OPENAI_API_KEY="your_openai_api_key"

# Default model for embedding
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Model for the main university chat feature
OPENAI_CHAT_MODEL=gpt-4o-mini

# Model for the query expansion in the chat feature
OPENAI_EXT_QUERY_MODEL=gpt-4o-mini

# Model for the AI blog generator
OPENAI_BLOG_WRITER_MODEL=gpt-4o

# Enable or disable web search for the blog generator ("true" or "false")
OPENAI_WEB_SEARCH_ENABLED=true

# Model for the web search feature in the blog generator
OPENAI_WEB_SEARCH_MODEL=gpt-4o-mini

# Model for OCR in the PDF processor
OPENAI_OCR_MODEL=gpt-4o-mini

# Model for translation in the PDF processor
OPENAI_TRANSLATE_MODEL=gpt-4o-mini

# Model for analysis in the PDF processor
OPENAI_ANALYSIS_MODEL=gpt-4o-mini


# ====================================================================
# Feature-specific Settings
# ====================================================================

# --- PDF Processor ---
# Temporary directory for PDF processing files
PDF_PROCESSOR_TEMP_DIR=temp/pdf_processing

# DPI for converting PDF pages to images for OCR
OCR_DPI=150

# Optional: Path to a file with custom translation terms
TRANSLATE_TERMS_FILE="translate_terms.txt"

# Optional: Path to a file with custom analysis questions
ANALYSIS_QUESTIONS_FILE="md_analysis_questions.txt"

# Maximum number of concurrent PDF processing tasks
PDF_MAX_CONCURRENT_TASKS=3

# --- University Chat ---
# Timeout for chat sessions in seconds (default: 3600 = 1 hour)
CHAT_SESSION_TIMEOUT=3600

# Enable or disable hybrid search ("true" or "false")
HYBRID_SEARCH_ENABLED=true


# ====================================================================
# Thread Pool Size Settings
# ====================================================================

# Number of threads for the blog HTML build pool
BLOG_UPDATE_THREAD_POOL_SIZE=8

# Number of threads for the admin operations pool
ADMIN_THREAD_POOL_SIZE=4

# Number of threads for the user access analytics pool
ANALYTICS_THREAD_POOL_SIZE=6
